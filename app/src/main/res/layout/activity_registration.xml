<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="registerViewModel"
                  type="com.notepoint4ugmail.kotlinmessanger.loginAndRegistration.registration.RegistrationViewModel"/>

    </data>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".loginAndRegistration.registration.RegistrationActivity"
            android:background="@android:color/holo_purple">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".MainActivity">
            <Button
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="@string/select_photo"
                    android:background="@drawable/round_image"
                    android:id="@+id/select_photo_registration"
                    android:layout_marginTop="64dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/button_style"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/user_name_edit_reg"
                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:hint="@string/user_name"
                    style="@style/medium_text"
                    android:layout_marginTop="48dp"
                    app:layout_constraintTop_toBottomOf="@+id/select_photo_registration"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/user_email_edit_login"
                    app:layout_constraintStart_toStartOf="@+id/user_name_edit_reg"
                    app:layout_constraintEnd_toEndOf="@+id/user_name_edit_reg"
                    style="@style/medium_text"
                    app:layout_constraintTop_toBottomOf="@+id/user_name_edit_reg"
                    android:hint="@string/email"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/user_password_edit_login"
                    app:layout_constraintStart_toStartOf="@+id/user_email_edit_login"
                    app:layout_constraintEnd_toEndOf="@+id/user_email_edit_login"
                    style="@style/medium_text"
                    app:layout_constraintTop_toBottomOf="@+id/user_email_edit_login"
                    android:hint="@string/password"/>
            <Button
                    android:text="@string/register"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height"
                    android:id="@+id/registration_button"
                    app:layout_constraintStart_toStartOf="@+id/user_password_edit_login"
                    app:layout_constraintEnd_toEndOf="@+id/user_password_edit_login"
                    android:layout_marginTop="16dp"
                    style="@style/button_style"
                    app:layout_constraintTop_toBottomOf="@+id/user_password_edit_login"
                    android:background="@drawable/rounded_button"/>
            <TextView
                    android:text="@string/already_have_an_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_text"
                    app:layout_constraintStart_toStartOf="@+id/registration_button"
                    app:layout_constraintEnd_toEndOf="@+id/registration_button"
                    android:layout_marginTop="24dp"
                    style="@style/small_text"
                    app:layout_constraintTop_toBottomOf="@+id/registration_button"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>