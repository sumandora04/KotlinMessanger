<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorViolet</item>
        <item name="colorPrimary">@android:color/holo_purple</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorViolet</item>
        <item name="colorPrimary">@android:color/holo_purple</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="medium_text">
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="small_text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="button_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

</resources>
